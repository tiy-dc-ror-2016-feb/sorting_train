<h1>Editing <%= @student.name %> </h1>

<%= form_tag(student_path(@student.id), method: :patch) do %>
  <div class="form-group">
    <%= label_tag "student[name]", "Name" %>
    <%= text_field_tag "student[name]", @student.name, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= label_tag "student[photo_url]", "Photo URL" %>
    <%= url_field_tag "student[photo_url]", @student.photo_url, class: 'form-control'%>
  </div>

  <%= submit_tag nil, class: 'btn btn-primary'%>
<% end %>
