<h1>New student</h1>

<%= form_for @student do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :photo_url %>
    <%= f.url_field :photo_url, class: 'form-control'%>
  </div>

  <%= f.submit class: 'btn btn-danger'%>
<% end %>

<%= link_to "Home", students_path, class: 'btn btn-default' %>
