<h1><%= @student.name %></h1>
<div class="row">
  <div class="col-md-3">
    <% unless @student.photo_url.blank? %>
      <%= image_tag @student.photo_url, class: "thumbnail img-responsive"%>
    <% else %>
      <%= image_tag "http://placekitten.com/500/500" , class: "thumbnail"%>
    <% end %>
  </div>

  <div class="col-md-9">
    <div class="btn-toolbar">
      <div class="btn-group">
        <%= link_to "Home", students_path, class: 'btn btn-default' %>
      </div>

      <%= link_to "Edit", edit_student_path(@student.id), class: 'btn btn-primary' %>
      <%= link_to "Delete", delete_student_path(@student.id), method: :delete, class: 'btn btn-danger' %>
    </div>


    <table class="table table-bordered">
      <thead>
        <tr>
          <th>
            Picked
          </th>
          <th>
            Time Ago
          </th>
        </tr>
      </thead>
      <tbody>
        <% @student.picks.each do |pick|%>
        <tr>
          <td>
            <%= pick.created_at %>
          </td>
          <td>
            ?
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
